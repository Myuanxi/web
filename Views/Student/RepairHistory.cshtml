@model IEnumerable<dms.Models.Repair>

<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>历史报修记录</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 20px;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .container {
            max-width: 800px;
            width: 100%;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            background-color: #f9f9f9;
        }

        h2 {
            text-align: center;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            padding: 10px;
            border: 1px solid #ccc;
            text-align: center;
        }

        th {
            background-color: #f2f2f2;
        }

        .pagination {
            margin-top: 20px;
            text-align: center;
        }

            .pagination a {
                display: inline-block;
                padding: 8px 16px;
                margin: 0 4px;
                background-color: #007BFF;
                color: white;
                border-radius: 4px;
                text-decoration: none;
            }

                .pagination a.disabled {
                    background-color: #ccc;
                    pointer-events: none;
                }

        .back-button {
            margin-top: 20px;
            background-color: #6c757d;
            color: white;
            border-radius: 4px;
            cursor: pointer;
            text-decoration: none;
            padding: 10px 20px;
            border: none;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>历史报修记录</h2>
        <table>
            <thead>
                <tr>
                    <th>地址</th>
                    <th>描述</th>
                    <th>分类</th>
                    <th>提交时间</th>
                    <th>状态</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var repair in Model)
                {
                    <tr>
                        <td>@repair.Address</td>
                        <td>@repair.Description</td>
                        <td>@repair.Category</td>
                        <td>@repair.SubmitTime.ToString("yyyy-MM-dd HH:mm:ss")</td>
                        <td>@repair.Status</td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="pagination">
            @if (ViewBag.HasPreviousPage)
            {
                <a asp-action="RepairHistory" asp-route-pageIndex="@(ViewBag.PageIndex - 1)">上一页</a>
            }
            else
            {
                <a class="disabled">上一页</a>
            }
            @if (ViewBag.HasNextPage)
            {
                <a asp-action="RepairHistory" asp-route-pageIndex="@(ViewBag.PageIndex + 1)">下一页</a>
            }
            else
            {
                <a class="disabled">下一页</a>
            }
        </div>
        <a href="@Url.Action("Index", "Student")" class="back-button">返回首页</a>
    </div>
</body>
</html>
