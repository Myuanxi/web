@model IEnumerable<dms.Models.Dormitory>

<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>宿舍管理</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 20px;
        }
    </style>
</head>
<body>
    <h2>宿舍查询</h2>
    <form method="post">
        <label for="buildingNumber">楼号:</label>
        <input type="number" id="buildingNumber" name="buildingNumber" required />
        <label for="dormNumber">宿舍号:</label>
        <input type="number" id="dormNumber" name="dormNumber" required />
        <button type="submit">查询</button>
    </form>

    <h3>查询结果</h3>
    @if (Model != null && Model.Any())
    {
        <table>
            <thead>
                <tr>
                    <th>宿舍ID</th>
                    <th>楼号</th>
                    <th>宿舍号</th>
                    <th>性别</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var dormitory in Model)
                {
                    <tr>
                        <td>@dormitory.Id</td>
                        <td>@dormitory.AId</td>
                        <td>@dormitory.Num</td>
                        <td>@dormitory.SGender</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>未找到相关宿舍信息。</p>
    }
</body>
</html>
