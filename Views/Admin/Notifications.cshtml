@model IEnumerable<dms.Models.Notification>

<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>通知和提醒</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 20px;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .container {
            max-width: 800px;
            width: 100%;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            background-color: #f9f9f9;
        }

        h2, h3 {
            text-align: center;
        }

        form {
            display: flex;
            flex-direction: column;
            align-items: center;
            margin-bottom: 20px;
        }

        label {
            margin-right: 10px;
        }

        input[type="text"], textarea {
            margin-bottom: 10px;
            padding: 5px;
            border: 1px solid #ccc;
            border-radius: 4px;
            width: 100%;
        }

        button {
            padding: 10px 20px;
            border: none;
            background-color: #007BFF;
            color: white;
            border-radius: 4px;
            cursor: pointer;
            margin-top: 10px;
        }

        .back-button {
            margin-top: 20px;
            background-color: #6c757d;
            color: white;
            border-radius: 4px;
            cursor: pointer;
            text-decoration: none;
            padding: 10px 20px;
            border: none;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            padding: 10px;
            border: 1px solid #ccc;
            text-align: center;
        }

        th {
            background-color: #f2f2f2;
        }

        .pagination {
            margin-top: 20px;
            text-align: center;
        }

            .pagination a {
                display: inline-block;
                padding: 8px 16px;
                margin: 0 4px;
                background-color: #007BFF;
                color: white;
                border-radius: 4px;
                text-decoration: none;
            }

                .pagination a.disabled {
                    background-color: #ccc;
                    pointer-events: none;
                }
    </style>
</head>
<body>
    <div class="container">
        <h2>通知和提醒</h2>

        <form asp-action="Notifications" method="post">
            <label for="title">标题：</label>
            <input type="text" id="title" name="title" required>

            <label for="content">内容：</label>
            <textarea id="content" name="content" rows="4" required></textarea>

            <button type="submit">提交</button>
        </form>

        <h3>历史通知</h3>
        <table>
            <thead>
                <tr>
                    <th>标题</th>
                    <th>内容</th>
                    <th>创建时间</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var notification in Model)
                {
                    <tr>
                        <td>@notification.Title</td>
                        <td>@notification.Content</td>
                        <td>@notification.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")</td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="pagination">
            @if (ViewBag.HasPreviousPage)
            {
                <a asp-action="Notifications" asp-route-pageIndex="@(ViewBag.PageIndex - 1)">上一页</a>
            }
            else
            {
                <a class="disabled">上一页</a>
            }
            @if (ViewBag.HasNextPage)
            {
                <a asp-action="Notifications" asp-route-pageIndex="@(ViewBag.PageIndex + 1)">下一页</a>
            }
            else
            {
                <a class="disabled">下一页</a>
            }
        </div>

        <a href="@Url.Action("Index", "Admin")" class="back-button">返回</a>
    </div>
</body>
</html>
